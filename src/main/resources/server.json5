{
  "hostname": "example.com",
  "bind": "::",
  "port": 25,
  "backlog": 25,
  "transactionsLimit": 200,
  "errorLimit": 3,

  "auth": true,
  "starttls": true,
  "chunking": true,

  "keystore": "/usr/local/keystore",
  "keystorepassword": "avengers",

  "storage": {
    "enabled": true,
    "path": "/usr/local/store"
  },

  "users": [
    {
      "name": "vmarian@mimecast.com",
      "pass": "notMyPassword"
    }
  ],

  "scenarios": {
    "*": {
      "rcpt": [
        {
          "value": ".*",
          "response": "501 Invalid address"
        }
      ]
    },
    "failtls.com": {
      "starttls": {
        "protocols": ["TLSv1.0"],
        "ciphers": ["TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA"],
        "response": "220 You will fail"
      }
    },
    "reject.com": {
      "ehlo": "501 Argument not allowed.",
      "mail": "451 Unable to process email at this time",
      "rcpt": [
        {
          "value": "john@reject.com",
          "response": "501 Invalid address"
        }
      ],
      "data": "554 Email rejected due to security policies"
    },
    "mimecast.net": {
      "data": "250 2.0.0 Received email OKAY"
    }
  }
}