{
  $schema: "/schema/case.schema.json",

  route: "net",
  timeout: 30,

  xclient: {
    name: "example.com",
    helo: "example.net",
    addr: "127.0.0.10"
  },

  auth: true,
  authBeforeTls: true,
  user: "tony@example.com",
  pass: "giveHerTheRing",

  envelopes: [
    {
      chunkSize: 2048,
      chunkBdat: true,
      chunkWrite: true,

      file: "src/test/resources/mime/lipsum.eml",
      folder: "src/test/resources/",

      mail: "tony@example.com",
      rcpt: [
        "pepper@example.com",
        "happy@example.com"
      ],
      headers: {
        from: "{$mail}",
        to: ["{$rcpt}"]
      }
    },
    {
      subject: "Lost in space",
      message: "Rescue me!",

      mail: "",
      rcpt: [
        "journalling@example.com"
      ],
      headers: {
        from: "tony@example.com",
        to: ["pepper@example.com"]
      }
    }
  ]
}